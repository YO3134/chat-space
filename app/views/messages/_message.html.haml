.message
  .upper_message
    .upper_message__user_name
      = message.user.name
    .upper_message__date
      = form_posted_time(message.created_at)
  .lower_message
    - if message.body.present?
      .lower_message__text
        = message.body
    = image_tag message.image, class: 'lower_message__text' if message.image.present?
