.side-bar
  .header
    %h3.header_name
      = current_user.name
    %ul.header_lists
      %li.list
        = link_to new_group_path do
          = fa_icon "pencil-square-o"
      %li.list
        = link_to edit_user_registration_path(current_user) do
          = fa_icon "cog"
  .groups
    - current_user.groups.each do |group|
      = link_to group_messages_path(group) do
        .group
          .group_name
            = group.name
          .group_message
            = group.show_last_message
